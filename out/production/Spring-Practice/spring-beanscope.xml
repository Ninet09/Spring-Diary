<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- scope = "singleton" 单列，指一个Bean容器中只存在一份 -->

    <!--<bean id="beanScope" class="com.ninet.bean.BeanScope" scope="singleton"></bean>-->

    <!-- scope = "prototype" 每次请求创建新的实例，destroy方法不生效 -->
    <bean id="beanScope" class="com.ninet.bean.BeanScope" scope="prototype"></bean>

</beans>